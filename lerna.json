{
  "packages": [
    "packages/*"
  ],
  "version": "independent",
  "publishConfig": {
    "access": "public"
  },
  "publish": {
    "ignoreChanges": [
      "ignored-file",
      "*.md"
    ],
    "message": "chore(release): publish %s"
  },
  "command": {
    "bootstrap": {
      "npmClientArgs": [
        "--legacy-peer-deps"
      ]
    }
  }
}